## arg 1:  the new package version
pre_install() {
	if [ -e /opt/sge ]
	then
		echo "##################################################"
		echo "##################################################"
		echo "##################################################"
		echo "/opt/sge already exists, you might want to remove the folder for a fresh install"
		echo "##################################################"
		echo "##################################################"
		echo "##################################################"
	fi
}

## arg 1:  the new package version
post_install() {
	cd /opt/sge/build/source/
	env SGE_ROOT=/opt/sge scripts/distinst -all -local -noexit
}

